script/source = "extends Control

var _mob_model : Dictionary
onready var notification : Label = $Notification

func _on_NewGame_pressed():
	var file2Check = File.new()
	if file2Check.file_exists(GlobalData.player_file_path):
			var file = File.new()
			file.open(GlobalData.player_file_path, File.READ)
			var content = file.get_as_text()
			_mob_model = parse_json(content)
			if (_mob_model[\"player_id\"] != \"unknown\"):
				GlobalData.load_data(GlobalData.player_file_path)
				print(\"Game loaded, last checkpoint :\", GlobalData.current_data[\"checkpoint\"], \" - Player:\", GlobalData.current_data[\"player_id\"] )
				get_tree().change_scene(\"res://Level_\" + str(GlobalData.current_data[\"checkpoint\"]) + \".tscn\")
				return
				
	get_tree().change_scene(\"res://Login/interface/login/Login.tscn\")
	GlobalData.reset_data()
	GlobalData.save_data(GlobalData.player_file_path)

func _on_Quit_pressed():
	get_tree().quit()
"

